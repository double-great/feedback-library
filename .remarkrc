{
  "plugins": [
    [
      "@double-great/remark-lint-alt-text"
    ],
    [
      "remark-frontmatter",
      [
        "yaml"
      ]
    ],
    [
      "remark-frontmatter-validator",
      [
        2,
        {
          "required": {
            "title": {
              "type": "string"
            },
            "image": {
              "type": "string",
              "match": "^img/\\d\\d\\d\\d-\\d\\d-\\d\\d-.*.(png|jpg)$"
            },
            "categories": {
              "type": "object",
              "oneOf": [
                "documentation",
                "product"
              ]
            }
          }
        }
      ]
    ]
  ]
}
